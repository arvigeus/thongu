{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "task",
      "args": [
        "dev"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: dev"
    },
    {
      "type": "deno",
      "command": "task",
      "args": [
        "lint"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: lint"
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "npm: lint"
    },
    {
      "type": "deno",
      "command": "task",
      "args": [
        "format"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: format"
    },
    {
      "type": "deno",
      "command": "task",
      "args": [
        "typecheck"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: typecheck"
    }
  ]
}
